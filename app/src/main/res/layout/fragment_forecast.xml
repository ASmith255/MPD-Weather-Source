<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:stretchColumns="*">

    <TableRow>
        <TextView
            android:id="@+id/forecastDay1Day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="day"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""/>

        <ImageView
            android:id="@+id/forecastDay1Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <TextView
            android:id="@+id/forecastDay1Temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="70C / 700C"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/forecastDay1ExpandButton"
            android:layout_span="4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Expand Details"/>
    </TableRow>

    <TableLayout
        android:id="@+id/forecastDay1Expanded"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>
            <TextView
                android:id="@+id/forecastDay1WeatherDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_span="2"
                android:text="temp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Wind:"/>

            <TextView
                android:id="@+id/forecastDay1WindSpeed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="temp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Humidity:"/>

            <TextView
                android:id="@+id/forecastDay1Humidity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="temp%"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Visibility:"/>

            <TextView
