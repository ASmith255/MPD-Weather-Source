                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="temp"/>

            <TextView
                android:id="@+id/forecastDay1WindDirection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="temp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:gravity="center"
                android:textStyle="bold"
                android:text="UV Risk:"/>

            <TextView
                android:id="@+id/forecastDay1UVRisk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="temp"/>
        </TableRow>

        <TableRow>
            <TextView
